<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread" android:layout_marginBottom="4dp">

    <com.github.curioustechizen.ago.RelativeTimeTextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:id="@+id/messageTimeView"
            android:visibility="visible" android:textAlignment="center" android:textSize="12sp"
            android:gravity="center_vertical"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/otherImageView"
            android:visibility="visible"
            tools:ignore="ContentDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/messageTimeView"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:id="@+id/messageLayout"
            app:layout_constraintRight_toLeftOf="@+id/meImageView" android:layout_marginRight="4dp"
            app:layout_constraintLeft_toRightOf="@+id/otherImageView" android:layout_marginLeft="4dp"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/messageTimeView">
        <android.support.v7.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                app:cardElevation="0dp"
                android:id="@+id/cardView"
                app:cardBackgroundColor="@color/chatapp_other_message"
                app:cardCornerRadius="16dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/messageTextView"
                    android:textColor="@android:color/black"
                    android:alpha="1"
                    android:minLines="1"
                    android:textSize="@dimen/chat_message_textsize"
                    android:scrollHorizontally="false"
                    android:ellipsize="none"
                    android:layout_marginBottom="6dp"
                    android:layout_marginEnd="12dp" android:layout_marginStart="12dp" android:layout_marginTop="4dp"
            />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/meImageView"
            android:visibility="visible"
            tools:ignore="ContentDescription"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/messageTimeView"/>

</android.support.constraint.ConstraintLayout>