<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.enblom.chatapp.LoginActivity"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical">
    <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:srcCompat="@drawable/chatapp_logo"
            android:id="@+id/logoImageView"
            tools:ignore="ContentDescription" android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginProgress"
            android:indeterminate="true"
            android:visibility="invisible" android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
</LinearLayout>
